{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./temp",
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp",
    "archive"
  ]
}
